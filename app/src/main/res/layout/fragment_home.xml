<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="ui.viewmodel.HomeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/screen_background"
        tools:context="ui.view.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:importantForAccessibility="no"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_todo_notification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@{viewmodel.usernameState}"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/productivityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/productivity"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/productivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_color"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:strokeColor="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productivityTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/overallTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overall"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/finishedTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/pink"
                        android:text="@{String.valueOf(viewmodel.weekTotalTaskState)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/overallTitle"
                        app:layout_constraintEnd_toEndOf="@id/overallTitle"
                        tools:text="23" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/plannedImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@color/screen_background"
                        app:layout_constraintEnd_toStartOf="@+id/plannedTitle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/RoundedImage" />

                    <TextView
                        android:id="@+id/plannedTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:text="@string/planned"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/completeImage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/completeImage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@color/turquoise"
                        app:layout_constraintEnd_toStartOf="@+id/completeTitle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/RoundedImage" />

                    <TextView
                        android:id="@+id/completeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:text="@string/completed"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/weekProgressRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/finishedTask" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Tasks Section -->
            <TextView
                android:id="@+id/recentTasksTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on_going"
                android:textColor="@color/pink"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productivityCard" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/taskCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp"
                app:strokeColor="@color/transparent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recentTasksTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewmodel.finishedTaskState ? View.GONE : View.VISIBLE}"
                    android:background="@drawable/ongoing_card_background"
                    android:padding="15dp">

                    <FrameLayout
                        android:id="@+id/onGoingTaskProgressContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/taskProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@{String.valueOf(viewmodel.notFinishedTask)}"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="5" />

                        <ProgressBar
                            android:id="@+id/taskProgressBar"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:progress="@{viewmodel.progressState}"
                            android:max="100"
                            android:layout_gravity="center"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_drawable" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/subTaskName"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:text="@{viewmodel.onGoingTaskNameState}"
                        android:textColor="@color/black"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/onGoingTaskProgressContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Home Screen UI" />

                    <TextView
                        android:id="@+id/taskTime"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@{viewmodel.onGoingTaskState}"
                        android:textColor="@color/black"
                        android:gravity="start|center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/subTaskName"
                        tools:text="10:00 - 14:00" />

                    <TextView
                        android:id="@+id/taskDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lineHeight="25dp"
                        android:textSize="14sp"
                        android:alpha="0.8"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@{viewmodel.onGoingTaskDescriptionState}"
                        android:gravity="start|center_vertical"
                        tools:text="@string/demo_long_text"
                        android:layout_marginTop="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/taskTime" />

                    <TextView
                        android:id="@+id/priority"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/day_textview_background"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/taskDescription"
                        app:onGoingPriorityBackground="@{viewmodel.onGoingTaskPriorityState}"
                        tools:text="High" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/finish_task"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/finishCheckBox" />

                    <CheckBox
                        android:id="@+id/finishCheckBox"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:button="@null"
                        android:gravity="center"
                        android:background="@drawable/finish_check_box_drawable"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/finishAllTaskTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/finish_all_task"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:visibility="@{viewmodel.finishedTaskState ? View.VISIBLE : View.GONE}"
                    android:textColor="@color/turquoise"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/todayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskCard" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayTaskRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/todayTitle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todayTaskRecyclerView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>