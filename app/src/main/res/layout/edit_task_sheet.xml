<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editTaskSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.BottomSheet"
            android:padding="25dp"
            android:background="@drawable/edit_container_background"
            app:behavior_peekHeight="0dp"
            app:behavior_hideable="true"
            app:behavior_draggable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <TextView
                android:id="@+id/taskNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_name"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/taskNameInput"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                tools:text="Salon App Wireframe UI"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taskNameLabel"
                tools:ignore="LabelFor" />

            <View
                android:id="@+id/nameIndicator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/turquoise"
                app:layout_constraintTop_toBottomOf="@+id/taskNameInput"
                tools:layout_editor_absoluteX="25dp" />

            <TextView
                android:id="@+id/startDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:alpha="0.7"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/nameIndicator"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/startDateInput"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:text="August 12, 2023"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawableEnd="@drawable/ic_todo_pick_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/startDateLabel"
                tools:ignore="LabelFor,TextFields"/>

            <View
                android:id="@+id/startDateIndicator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/turquoise"
                app:layout_constraintTop_toBottomOf="@+id/startDateInput"
                tools:layout_editor_absoluteX="25dp" />

            <TextView
                android:id="@+id/endDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:alpha="0.7"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/startDateIndicator"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/endDateInput"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:importantForAutofill="no"
                android:inputType="text"
                tools:text="August 12, 2023"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawableEnd="@drawable/ic_todo_pick_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/endDateLabel"
                tools:ignore="LabelFor,TextFields"/>

            <View
                android:id="@+id/endDateIndicator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/turquoise"
                app:layout_constraintTop_toBottomOf="@+id/endDateInput"
                tools:layout_editor_absoluteX="25dp" />

            <TextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:alpha="0.7"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/endDateIndicator"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/beginTimeInput"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@null"
                android:importantForAutofill="no"
                android:inputType="time"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeLabel"
                tools:ignore="LabelFor,TextFields"
                tools:text="10:00" />

            <View
                android:id="@+id/startTimeIndicator"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/turquoise"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beginTimeInput" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:padding="13dp"
                android:src="@drawable/ic_todo_white_right"
                app:layout_constraintTop_toBottomOf="@id/timeLabel"
                app:layout_constraintStart_toEndOf="@+id/beginTimeInput" />

            <EditText
                android:id="@+id/endTimeInput"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="time"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/timeLabel"
                app:layout_constraintStart_toEndOf="@+id/imageview"
                tools:ignore="LabelFor,TextFields"
                tools:text="14:00" />

            <View
                android:id="@+id/endTimeIndicator"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:background="@color/turquoise"
                app:layout_constraintStart_toEndOf="@+id/imageview"
                app:layout_constraintTop_toBottomOf="@+id/endTimeInput" />

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                android:alpha="0.7"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/startTimeIndicator"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/descriptionInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                tools:text="@string/demo_long_text"
                android:background="@null"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineHeight="23dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:padding="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descriptionLabel"
                tools:ignore="LabelFor,TextFields"/>

            <View
                android:id="@+id/descriptionIndicator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/turquoise"
                app:layout_constraintTop_toBottomOf="@+id/descriptionInput"
                tools:layout_editor_absoluteX="25dp" />

            <Button
                android:id="@+id/createTaskButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/ongoing_card_background"
                android:text="@string/confirm"
                android:textColor="@color/screen_background"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="45dp"
                app:backgroundTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionIndicator"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>