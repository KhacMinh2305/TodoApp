    <TextView
        android:id="@+id/priorityTitle"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:alpha="0.7"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:lines="1"
        android:layout_marginStart="15dp"
        android:text="@string/priority"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endDateTitle" />

    <RadioGroup
        android:id="@+id/priority"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/priorityTitle"
        app:layout_constraintTop_toBottomOf="@+id/endDate"
        tools:text="High" >
        <RadioButton
            android:id="@+id/highPriority"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/high"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/pink"/>

        <RadioButton
            android:id="@+id/mediumPriority"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/medium"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/medium"/>

        <RadioButton
            android:id="@+id/lowPriority"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/low"
            android:layout_weight="1"
            android:textSize="15sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/low"/>
    </RadioGroup>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:importantForAccessibility="no"
        android:padding="13dp"
        android:background="@drawable/header_button_background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/priority"
        android:scaleType="centerCrop"
        android:text="Save"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:importantForAccessibility="no"
        android:padding="13dp"
        android:background="@drawable/header_button_background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="60dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/priority"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cancel"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priority">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:background="@drawable/task_detail_container_background"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="top|end"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:text="@string/description"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:lineHeight="25dp"
                android:layout_gravity="top|end"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:inputType="text"
                android:gravity="start|center_vertical"
                tools:text="@string/demo_long_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTitle" />

            <View
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/screen_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/commentTitle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="top|end"
                android:drawablePadding="10dp"
                android:gravity="start|center_vertical"
                android:text="@string/comment"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/indicator" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@id/descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/comment"
            app:drawableStartCompat="@drawable/ic_todo_comment"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/comment_background"
            android:layout_gravity="top|end"
            android:layout_marginEnd="30dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>