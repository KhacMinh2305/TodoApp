<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Todo" parent="Base.Theme.Todo" />

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Custom.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomFab" parent="Widget.Design.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
        <item name="background">@color/pink</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/static_splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Todo</item>
    </style>
</resources>