<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/home_nav_graph">

    <include app:graph="@navigation/home_nav_graph" />
    <include app:graph="@navigation/calendar_nav_graph" />
    <include app:graph="@navigation/profile_nav_graph" />
    <include app:graph="@navigation/setting_nav_graph" />

    <fragment
        android:id="@+id/creatingTaskFragment"
        android:name="ui.view.CreatingTaskFragment"
        android:label="fragment_creating_task"
        tools:layout="@layout/fragment_creating_task" />

    <action android:id="@+id/action_creating_task"
        app:destination="@id/creatingTaskFragment"
        app:restoreState="true" />

    <fragment
        android:id="@+id/signInFragment"
        android:name="ui.view.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />

    <action android:id="@+id/action_signing_in"
        app:destination="@id/signInFragment"
        app:restoreState="true" />

    <action android:id="@+id/action_logging_out"
        app:destination="@id/signInFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="false"
        app:restoreState="false"/>

</navigation>